{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"includes": ["src/**/*.{ts,tsx}"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "error"
					},
					"suspicious": {
						"noExplicitAny": "warn"
					},
					"correctness": {
						"useHookAtTopLevel": "error",
						"useExhaustiveDependencies": "error"
					},
					"nursery": {
						"useSortedClasses": "error"
					}
				}
			}
		},
		{
			"includes": ["**/__tests__/**/*", "**/*.{test,spec}.{ts,tsx}"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["convex/_generated/**"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			}
		}
	]
}