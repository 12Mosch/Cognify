{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"types": ["jest", "@testing-library/jest-dom", "node"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*",
		"src/**/*.test.*",
		"src/**/*.spec.*",
		"src/**/__tests__/**/*"
	]
}
